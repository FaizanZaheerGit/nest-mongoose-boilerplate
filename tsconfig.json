{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    // "baseUrl": "./", // NOTE: This has been commented out because the baseUrl has been deprecated from typescript
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@auth/*": ["./src/auth/*"],
      "@config/*": ["./src/config/*"],
      "@database/*": ["./src/database/*"],
      "@decorators/*": ["./src/utils/decorators/*"],
      "@health/*": ["./src/health/*"],
      "@enums/*": ["./src/utils/enums/*"],
      "@events/*": ["./src/utils/events/*"],
      "@filters/*": ["./src/utils/filters/*"],
      "@interceptors/*": ["./src/utils/interceptors/*"],
      "@jwt/*": ["./src/auth/jwt/*"],
      "@notifications/*": ["./src/notifications/*"],
      "@role/*": ["./src/roles/*"],
      "@seeder/*": ["./src/seeders/*"],
      "@src/*": ["./src/*"],
      "@user/*": ["./src/users/*"],
      "@utils/*": ["./src/utils/*"],
      "@validators/*": ["./src/utils/validators/*"]
    }
  }
}
